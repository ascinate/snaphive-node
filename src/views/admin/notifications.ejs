<%- include("../components/adminHeader", { title: "Notifications" }) %>
<%- include("../components/adminSidebar") %>

<div class="container-fluid mt-4">

  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">ðŸ”” Notifications & Messaging</h3>
    
  </div>

  <!-- Notification Form -->
  <div class="card">
    <div class="card-body">

      <div class="row mb-3">
        <div class="col-md-4">
          <label class="form-label">Notification Type</label>
          <select class="form-control">
            <option>Push Notification</option>
            <option>In-App Announcement</option>
            <option>Maintenance Alert</option>
          </select>
        </div>

        <div class="col-md-4">
          <label class="form-label">Target Audience</label>
          <select class="form-control">
            <option>All Users</option>
            <option>Specific Hive</option>
          </select>
        </div>

        <div class="col-md-4 d-flex align-items-end">
          <label>
            <input type="checkbox" checked disabled />
            Push Enabled
          </label>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          placeholder="Enter notification title"
        />
      </div>

      <div class="mb-3">
        <label class="form-label">Message</label>
        <textarea
          class="form-control"
          rows="4"
          placeholder="Write notification message..."
        ></textarea>
      </div>

      <div class="d-flex justify-content-end">
        <button
          class="btn btn-primary"
          onclick="sendStaticNotification()"
        >
          ðŸ“¢ Send Notification
        </button>
      </div>

    </div>
  </div>

  <!-- Notification History -->
  <div class="card mt-4">
    <div class="card-header">
      <strong>Recent Notifications</strong>
    </div>
    <div class="card-body p-0">
      <table class="table table-striped mb-0">
        <thead>
          <tr>
            <th>Type</th>
            <th>Title</th>
            <th>Audience</th>
            <th>Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Push</td>
            <td>Welcome Message</td>
            <td>All Users</td>
            <td>Today</td>
            <td><span class="badge bg-success">Sent</span></td>
          </tr>
          <tr>
            <td>Maintenance</td>
            <td>System Update</td>
            <td>All Users</td>
            <td>Yesterday</td>
            <td><span class="badge bg-warning">Scheduled</span></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>
<%- include("../components/adminFooter") %>

<script>
function sendStaticNotification() {
  showToast("ðŸ“¢ Notification sent");
}
</script>
